@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using TheUmbracoSite.Models;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.TextPage>
@{
    Layout = "BasicNav.cshtml";
}
@*This page is intended to be used with a broken form in the Umbraco MVC Course*@
<section id="single-content" class="bg-white">
    <div class="container">
        <div class="section-content blog-content">
            <div class="row">
                <div class="col-md-8 offset-md-2 mt-4">
                    @await Html.PartialAsync("BrokenForm", new BrokenFormModel())
                </div>
            </div>
        </div>
    </div>
</section>
